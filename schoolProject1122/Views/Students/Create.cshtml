@model schoolProject1122.ViewModels.StudentCreateVM
@{
    ViewData["Title"] = "Create Student";
    var classes = ViewBag.Classes as IEnumerable<schoolProject1122.Models.ClassRoom>;
}

<h2>Create Student</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data" class="mt-3">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Age" class="form-label"></label>
        <input asp-for="Age" class="form-control" />
        <span asp-validation-for="Age" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="RollNumber" class="form-label"></label>
        <input asp-for="RollNumber" class="form-control" />
        <span asp-validation-for="RollNumber" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Class</label>
        <select asp-for="ClassRoomId" class="form-select">
            <option value="">-- Select Class --</option>
            @foreach (var c in classes!)
            {
                <option value="@c.Id">@c.Name</option>
            }
        </select>
    </div>

    <div class="mb-3">
        <label class="form-label">Image</label>
        <input asp-for="Image" type="file" class="form-control" />
    </div>

    <button class="btn btn-primary" type="submit">Save</button>
    <a class="btn btn-secondary" href="@Url.Action("Index")">Back</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
